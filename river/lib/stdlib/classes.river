@classes = new
def classes; @classes; end
def attr_reader(name)
  set_method name, do
    get_member name
  end
end

def class(name,block)
  root.classes.eval do
    klass = if get_member name
      get_member name
    else
      attr_reader name
      set_member name, new
    end
    klass.eval block
  end
end
